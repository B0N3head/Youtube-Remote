{
  "name": "YouTube Remote",
  "short_name": "YT Remote",
  "version": "0.2.1",
  "description": "Control Youtube from other devices on your local network",
  "permissions": [
    "scripting",
    "tabs",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "yt_remote.js"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://music.youtube.com/*"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/ytr16.png",
      "32": "icons/ytr16.png",
      "48": "icons/ytr16.png",
      "128": "icons/ytr16.png"
    }
  },
  "icons": {
    "16": "icons/ytr16.png",
    "32": "icons/ytr16.png",
    "48": "icons/ytr16.png",
    "128": "icons/ytr16.png"
  },
  "manifest_version": 3
}